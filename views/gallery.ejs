<% layout('layout/boilerplate') %>
<%- include('preloader') -%>
<%- include('./partials/flash') %>
<link rel="stylesheet" href="css/gallery.css">


     <!-- Welcome block -->
     <div class="welcomeBlock ">
        <h1 class="container text-center text-dark pb-4 welnote animate__animated animate__zoomIn fs-1 fw-bolder">O U R &nbsp; G A L L E R Y</h1>
    </div>  
    
<!-- body -->
<div class="container py-5 mb-4">
    <h2 class="container text-center pt-5 fs-1">GALLERY</h2>
    <div class="container"><hr style="margin: 2% 25% 10%;">
        <div class="container-fluid">
            <div class="row">
              <% for(let g of gallery) { %>
            <div class="col-lg-3 col-md-6 my-2 h" >
                <img src="<%= g.image %>"  width="100%" height="100%" data-toggle="modal"
                data-target="#exampleModal" alt="">
              </div>
              <% if (access2==2) { %>
                <form action="/gallery/<%= g._id %>?_method=DELETE" method="POST" style="width: 2.7rem;" >
                  <button class="btn btn-danger f" style="border-radius: 50%;;"><i class="fas fa-trash"></i></button>
                </form>
              <% } %>
              <% } %>
            </div>
          </div>
          </div>
        </div>

        <% if (access2==2) { %>
          <a href="/galleryForm" class="floatAddform fs-3 m-2">
            <i class="fas fa-plus"></i>
        </a>
        <% } else { %>

        <a href="/security" class="floatSetting d-none fs-3 m-2">
          <i class="far fa-cog"></i>
        </a>
        <% } %> 


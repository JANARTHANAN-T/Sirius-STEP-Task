<% layout('layout/boilerplate') %>
    <h1>All CampGround</h1>
    <div>
        <a href="/campground/new">Add Campground</a>
    </div>
    <% for(let camp of campground) { %>
        
        <div class="card mb-4">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%= camp.Image %>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.Title %></h5>
                        <p class="card-text"><%= camp.Discription %></p>
                        <p class="card-text"><small class="text-muted"><%= camp.Location %></small></p>
                        <a class="btn btn-primary" href="/campground/<%= camp._id %>">view</a>
                    </div>
                </div>
            </div>
        </div>

    <% } %>
        

